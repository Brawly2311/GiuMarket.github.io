    <script>
        // Función para agregar productos al carrito
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                const productTitle = this.parentElement.querySelector('.product-title').textContent;
                alert(`"${productTitle}" ha sido añadido al carrito`);
            });
        });
        
        // Función para filtrar productos por categoría
        document.querySelectorAll('.categories a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const category = this.textContent;
                alert(`Mostrando productos de la categoría: ${category}`);
                // Aquí iría la lógica para filtrar productos
            });
        });
    </script>
